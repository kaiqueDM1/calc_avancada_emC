#include <stdio.h>
void calcularBhaskara(float a, float b, float c, float *raiz1, float *raiz2){
  
    float delta = b * b - 4 * a * c;

    if (delta > 0) {
        // Duas raízes reais distintas
        *raiz1 = (-b + sqrtf(delta)) / (2 * a);
        *raiz2 = (-b - sqrtf(delta)) / (2 * a);
    } else if (delta == 0) {
        // Duas raízes reais iguais
        *raiz1 = -b / (2 * a);
        *raiz2 = *raiz1;
    } else {
      	printf("Delta negativo!!!\n");
      	printf("As raizes não estão presentes no conjunto dos reais");
    } 

}
void escolha_numero(float *num1, float *num2) {
    printf("Digite o primeiro numero: ");
    scanf("%f", num1);

    printf("Digite o segundo numero: ");
    scanf("%f", num2);
}

void escolha_numero_2(float *num3) {
    printf("Digite o numero: ");
    scanf("%f", num3);
}

void escolha_numero_3(float *num1, float *num2) {
  printf("Digite o valor correspondente a base do objeto: ");
  scanf("%f", num1);
  
  printf("Digite o valor correspondente a altura do objeto: ");
  scanf("%f", num2);
}

void escolha_numero_4(float *raio) {
  printf("digite o tamanho do raio:");
  scanf("%f",raio);
}
void escolha_bhaskara(float *a, float *b, float *c){
       printf("Digite os coeficientes a, b e c da equação quadrática (ax^2 + bx + c): \n");
    scanf("%f %f %f", a, b, c);
  
}
  

float calc_somar(float num1, float num2) {
    return num1 + num2;
}

float calc_subtrair(float num1, float num2){
  return num1 - num2;
}

float calc_multiplicar(float num1, float num2){
  return num1 * num2;
}

float calc_dividir(float num1, float num2){
  if (num2 != 0){
    return num1 / num2;
  }
  else{
    printf("Não é possivel divisão por zero!\n");
    return 0;
  }
}

float calc_quad(float num3){
  return num3*num3;
}

float calc_raiz(float num3) {
   float resultado;
    if (num3 < 0)
        return -1.0; // Não é possível calcular raiz quadrada de números negativos

    float estimativa = num3;
    float precisao = 0.00001; // Define a precisão desejada

    while ((estimativa * estimativa - num3) > precisao) {
        estimativa = (estimativa + num3/ estimativa) / 2;
    }

    return estimativa;
}

float calc_tri(float num1, float num2){ // a=(b*h)/2
	return (num1*num2)/2;
}

float calc_circulo(float raio){
   float area;
  if (raio < 0) {
        printf("O raio não pode ser negativo.\n");
    } else {
        area = 3.1415 * raio * raio; 
        printf("A área do círculo com raio %.2f é %.2f unidades de medidas\n", raio, area);
    }

    return 0;
}



int main() {

  float numero, num1, num2, num3, raio, resultado;
  short int escolha;
  char escolha_calc_area, T, Q, C;
   float a, b, c;
    float raiz1, raiz2;

   

    printf("As raízes são %.2f e %.2f\n", raiz1, raiz2);

  
  printf("Bem vindo a calculadora de Valorização Altamente Geometrica Nivelado Exponencialmente Relativo\nV.A.G.N.E.R\n");
  printf("Qual operação você deseja fazer? \n\n");
  printf("1 - Soma\n");
  printf("2 - Subtração\n");
  printf("3 - Multiplicação\n");
  printf("4 - Divisão\n");
  printf("5 - Número ao quadrado\n");
  printf("6 - Raiz quadrada\n");
  printf("8 - Calcular área triangulo\n");
  printf("9 - Calcular área circulo\n");
  printf("10 - Calcular área quadrado\n");
  scanf("%hi", &escolha);
  
  switch (escolha) {
    
    case 1:
      escolha_numero(&num1, &num2);
      printf("Resultado: %.2f\n", calc_somar(num1, num2));
      break;
    
    case 2:
      escolha_numero(&num1, &num2);
      printf("Resultado: %.2f\n", calc_subtrair(num1, num2));
      break;
    
    case 3:
      escolha_numero(&num1, &num2);
      printf("Resultado: %.2f\n", calc_multiplicar(num1, num2));
      break;
    
    case 4:
      escolha_numero(&num1, &num2);
      printf("Resultado: %.2f\n", calc_dividir(num1, num2));
      break;
    
    case 5:
      escolha_numero_2(&num3);
      printf("Resultado: %.2f\n", calc_quad(num3));
      break;
    
     case 6:
        escolha_numero_2(&num3);
        resultado = calc_raiz(num3);
    
      if (resultado == -1.0) {
          printf("Não é possível calcular a raiz quadrada de um número negativo.\n");
      }
      else {
          printf("A raiz quadrada de %.2f é aproximadamente %.5f\n", num3, resultado);
      }

    case 8:
      escolha_numero_3(&num1, &num2);
    	printf("Resultado: %.2f\n", calc_tri(num1, num2));
    	break;
      
    case 9:
      escolha_numero_4(&raio);
      calc_circulo(raio);
      break;

    case 10:
      escolha_numero_3(&num1, &num2);
      printf("Resultado: %.2f\n", calc_multiplicar(num1, num2));

    case 13:
    escolha_bhaskara(&a,&b,&c);
    calcularBhaskara(a, b, c, &raiz1, &raiz2);
 
   printf("As raízes são %.2f e %.2f\n", raiz1, raiz2);
    case 12:
      printf("Obrigado por utilizar o V.A.G.N.E.R!!!");
      break;
    
    default: //Resolver bug com "," ex 4,5 - 5,3 e etc
      printf("Opção inválida!\n");
      break;
  }
  return 0;
  }  
